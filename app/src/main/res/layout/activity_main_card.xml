<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E6E6E2E4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:elevation="15dp"
        android:padding="5dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_delete" />

                <EditText
                    android:id="@+id/txtValor"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textDirection="ltr" />

                <RadioButton
                    android:id="@+id/radioEntrada"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="Entrada" />

                <RadioButton
                    android:id="@+id/radioSaida"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:text="SaÃ­da" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/somaum"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/roundedbutton"
                    android:text="+1"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/somacinco"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/roundedbutton"
                    android:text="+5"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/somadez"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/roundedbutton"
                    android:text="+10"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/somacinquenta"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/roundedbutton"
                    android:text="+50"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/somacem"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/roundedbutton"
                    android:text="+100"
                    android:textColor="@color/colorPrimaryDark" />

                <Spinner
                    android:id="@+id/spinnerTipoTransacao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layoutDirection="ltr"
                    android:textDirection="rtl" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/somaumCent"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/roundedbutton"
                    android:text="+0,01"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/somaCincoCent"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/roundedbutton"
                    android:text="+0,5"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/somaDezCent"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/roundedbutton"
                    android:text="+0,10"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/somaVinteCincoCent"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/roundedbutton"
                    android:text="+0,25"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/somaCinquentaCent"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/roundedbutton"
                    android:text="+0,50"
                    android:textColor="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_menu_gallery" />

            </LinearLayout>

            <Button
                android:id="@+id/btnAdicionar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/holo_green_light"
                android:text="Adicionar" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>