<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E2E4"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:elevation="15dp"
        android:padding="5dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_delete"
                    android:contentDescription="@string/exclui_valores" />

                <EditText
                    android:id="@+id/txtValor"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textDirection="ltr"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor" />

                <RadioButton
                    android:id="@+id/radioEntrada"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="@string/entrada" />

                <RadioButton
                    android:id="@+id/radioSaida"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:text="@string/saida" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/somaum"
                    android:text="@string/_1"
                    style="@style/BotaoRedondoPequeno"/>

                <Button
                    android:id="@+id/somacinco"
                    android:text="@string/_5"
                    style="@style/BotaoRedondoPequeno"/>

                <Button
                    android:id="@+id/somadez"
                    android:text="@string/_10"
                    style="@style/BotaoRedondoPequeno"/>

                <Button
                    android:id="@+id/somacinquenta"
                    android:text="@string/_50"
                    style="@style/BotaoRedondoPequeno"/>

                <Button
                    android:id="@+id/somacem"
                    android:text="@string/_100"
                    style="@style/BotaoRedondoPequeno"/>

                <Spinner
                    android:id="@+id/spinnerTipoTransacao"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:layoutDirection="ltr"
                    android:textDirection="rtl" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/somaumCent"
                    android:text="@string/_0_01"
                    style="@style/BotaoRedondoPequeno"/>

                <Button
                    android:id="@+id/somaCincoCent"
                    android:text="@string/_0_5"
                    style="@style/BotaoRedondoPequeno"/>

                <Button
                    android:id="@+id/somaDezCent"
                    android:text="@string/_0_10"
                    style="@style/BotaoRedondoPequeno"/>

                <Button
                    android:id="@+id/somaVinteCincoCent"
                    android:text="@string/_0_25"
                    style="@style/BotaoRedondoPequeno"/>

                <Button
                    android:id="@+id/somaCinquentaCent"
                    android:text="@string/_0_50"
                    style="@style/BotaoRedondoPequeno"/>

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_menu_gallery"
                    android:contentDescription="@string/img_entrada_ou_saida"
                    tools:ignore="InefficientWeight" />

            </LinearLayout>

            <Button
                android:id="@+id/btnAdicionar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/holo_green_light"
                android:text="@string/adicionar" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>